
div
  div infinite-scroll="$ctrl.myPagingFunction()" infinite-scroll-distance="3"
    <table class="table table-hover" ng-cloak="" ts-wrapper="">
      thead
        tr
          th.checkbox-action Never Product?
          th.checkbox-action Coupon?
          th.checkbox-action Always A Product?
          th ts-criteria="rsd|lowercase" Receipt Short Description
          th ts-criteria="accepted_count|lowercase" Accepted Count
          th ts-criteria="rejected_count|lowercase" Rejected Count
          th ts-criteria="unique_accepted_count|lowercase" Unique Accepted Count
          th ts-criteria="unique_rejected_count|lowercase" Unique Rejected Count
          th ts-criteria="alt_product|lowercase" Alt Product
          th ts-criteria="alt_product_unique_accepted_count|lowercase" Alt Product Unique Accepted Count
          th ts-criteria="alt_product_accepted_count|lowercase" Alt Product Accepted Count
          th ts-criteria="receipt_accepted_count|lowercase" Receipt Accepted Count
          th ts-criteria="receipt_rejected_count|lowercase" Receipt Rejected Count
      tbody
        <tr ng-repeat="obj in $ctrl.collection" ts-repeat="">
          td 
            input type="checkbox" class="big-checkbox" ng-model="obj.never_product" ng-change="$ctrl.updateRsdProduct(obj, 'never_product')"
          td 
            input type="checkbox" class="big-checkbox"  ng-model="obj.coupon" ng-change="$ctrl.updateRsdProduct(obj, 'coupon')"
          td 
            input type="checkbox" class="big-checkbox"  ng-model="obj.always_a_product" ng-change="$ctrl.updateRsdProduct(obj, 'always_a_product')"
          td.titled-list
            h3
              | {{obj.rsd}}
          td
            h4
              | {{obj.accepted_count}}
          td
            h4
              | {{obj.rejected_count}}
          td
            h4
              | {{obj.unique_accepted_count}}
          td
            h4
              | {{obj.unique_rejected_count}}
          td
            h4
              | {{obj.alt_product}}
          td
            h4
              | {{obj.alt_product_unique_accepted_count}}
          td
            h4
              | {{obj.alt_product_accepted_count}}
          td
            h4
              | {{obj.receipt_accepted_count}}
          td
            h4
              | {{obj.receipt_rejected_count}}
